<div id="period-popup">
  <div class="ui coupled modal">

      <div class="ui second modal" id="edit_period_from_modal">
        <div class="content">
            <div class="edit_period_from_calendar_form"></div>
        </div>
      </div>

      <div class="ui first modal" id="calendar_modal">
        <div class="header">
          <i class="close icon"></i>
          <b>Занятие №<%= @popup_period.lesson_number %>. <%= @popup_period.title %></b>
        </div>
        <div class="content">
          <b>Курс:  </b><%= @popup_period.course.name %><br>
          <b>Группа:  </b><%= @popup_period.group.name %><br>
          <b>Преподаватель: </b>
          <% # if signed_in_as_admin? || signed_in_as_teacher_redactor? %>
                <br><br>
                <%= link_to '#', class: 'btn btn-default btn-sm', id: 'edit_button' do %>
                    <span class="fa fa-edit"></span>
                    Редактировать
                <% end %>
                <%= link_to destroy_calendar_period_path(@popup_period.id), class: 'btn btn-danger btn-sm', style: 'margin-left: 5px;',
                            data: {confirm: "Вы уверены что хотите удалить занятие №#{@popup_period.lesson_number} - #{@popup_period.title}?"},
                            method: :delete do %>
                    <span class="fa fa-remove"></span>
                    Удалить
                <% end %>
          <% # end %>
        </div>
      </div>

  </div>
</div>