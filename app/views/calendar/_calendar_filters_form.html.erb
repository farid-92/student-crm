
<div class="ui visible left vertical sidebar menu" id="calendar_vertical_sidebar">

  <div class="header item">
    <span class="fa fa-filter" id="filter"></span>&nbsp;Фильтрация
  </div>

  <div class="ui accordion">

    <div class="title">
      <i class="dropdown icon"></i>
      <i class="student icon"></i><b>Курсы</b>
    </div>

    <div class="content" id="courses_list">
      <div class="ui list">
        <% Course.all.each do |course| %>
            <div class="item">
              <div class="content" id="content-margin-left">
                <div class="ui checkbox">
                  <%= check_box_tag 'groups_of_courses', course.id %>
                  <label>
                    <div><b><%= course.name %></b></div>
                  </label>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>

    <div class="title">
      <i class="dropdown icon"></i>
      <i class="cubes icon"></i><b>Группы</b>
    </div>
    <div id="groups_list">
        <div class="content">
          <div class="groups_of_courses"></div>
        </div>
    </div>

    <div class="title">
      <i class="dropdown icon"></i>
      <i class="user icon"></i><b>Преподаватели</b>
    </div>
    <div id="teachers_list">
        <div class="content">
          <div class="teachers_of_courses"></div>
        </div>
    </div>

  </div>
</div>