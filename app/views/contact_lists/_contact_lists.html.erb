<h5 class="ui dividing header">Создание получателей</h5>
<div class="new-contact-list">
  <%= link_to new_contact_list_path, class: 'btn btn-default' do %>
    <span class="fa fa-plus-circle"></span>
    Добавить получателей
  <% end %>
</div>
<% if @contact_lists.blank? %>
  <div class="notification margin-top-30">
    <i>Добавьте получателей</i>
  </div>
<% else %>
  <h5 class="ui dividing header">Получатели</h5>
  <table class="ui three column selectable celled table">
    <thead>
      <tr>
        <th>Название</th>
        <th>Действия</th>
      </tr>
    </thead>
    <tbody>
    <% @contact_lists.each do |contact_list| %>
      <tr>
        <td><%= contact_list.title %></td>
        <td>
          <%= link_to edit_contact_list_path(contact_list), class: 'btn btn-sm btn-default' do %>
          <span class="fa fa-edit"></span>     Редактировать
          <% end %>
          <%= link_to contact_list_path(contact_list), method: :delete, data: {confirm: 'are you sure?'}, class: 'btn btn-sm btn-danger' do %>
          <span class="fa fa-remove"></span>     Удалить
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>