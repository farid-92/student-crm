<div class="page-header">
  <div class="ui breadcrumb">
    <%= link_to 'Все курсы', root_path %>
    <div class="divider"> / </div>
    <%= link_to @group.course.name, show_course_index_path(@group.course, resource: 2) %>
    <div class="divider"> / </div>
    <%= link_to @group.name, show_group_index_path(@group, resource: 1) %>
    <div class="divider"> / </div>
    <div class="active section"> Занятие#<%= @period.lesson_number %></div>
  </div>
  <h5 class="text-center">Проверка домашний заданий</h5>
</div>
<div class="course-wrapper">
  <h5 class="text-center"></h5>
  <div class="new-course-btn">
    <%= link_to export_all_path(period_id: @period.id, group_id: @group.id), class: 'btn btn-primary' do %>
      <span class="fa fa-cloud-download"></span>
      все архивы
    <% end %>
  </div>
</div>
<h4 class="ui dividing header">Курс: <%= @group.course.name %>, Группа: <%= @group.name %>, <%= show_deadline %></h4>